<h2>Sign up</h2>

<form action="/signup" method="post">
<label>
    Username
    <input type="text" name="username" placeholder="ironhacker">
</label>

<label>
    Password
    <input type="password" name="password" placeholder="*********">
</label>

<button type="submit">Sign up</button>
</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}